
@model IEnumerable<PhotoServiceModel>

@{
    ViewData["Title"] = "My Photos";
}

<h2 class="text-center">@ViewData["Title"]</h2>
<hr />

<hr />
<div class="card-body text-center">
<a asp-controller="Photo" asp-action="Add" class="btn btn-primary btn-lg align-items-center" role="button">Add Photo</a>
</div>

@if (Model.Any() == false)
{
    <h3 class="text-center">You have no photos yet!</h3>
}

<div class="row">
    @foreach (var item in Model)
    {
        <partial name="_PhotoPartial" model="@item" />
    }
</div>